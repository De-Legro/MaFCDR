<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping>
	<entity name="BM2\SiteBundle\Entity\CharacterBackground">
		<id name="id" type="integer">
			<generator strategy="IDENTITY"/>
		</id>
		<field name="description" type="text" nullable="true"/>
		<field name="private_description" type="text" nullable="true"/>
		<field name="secret_description" type="text" nullable="true"/>

		<one-to-one field="house" target-entity="House" mapped-by="descriptions"/>

	</entity>
</doctrine-mapping>
