<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping>
	<entity name="BM2\SiteBundle\Entity\Inventory">
		<id name="id" type="integer">
			<generator strategy="IDENTITY"/>
		</id>

		<one-to-many field="items" target-entity="Item" mapped-by="inventory">
			<order-by>
				<order-by-field name="name" direction="ASC" />
			</order-by>
		</one-to-many>
    <field name="type" type="string"/>
    
		<one-to-one field="settlement" target-entity="Settlement" mapped-by="inventory"/>
		<one-to-one field="character" target-entity="Character" mapped-by="inventory"/>
		<one-to-one field="place" target-entity="Place" mapped-by="inventory"/>

    <one-to-many field="artifacts" target-entity="Artifact" mapped-by="container"/>
    
	</entity>
</doctrine-mapping>
