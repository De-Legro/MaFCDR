<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping>
	<entity name="BM2\SiteBundle\Entity\WelcomeMessage">
		<id name="id" type="integer">
			<generator strategy="IDENTITY"/>
		</id>
		<many-to-one field="character" target-entity="Character" inversed-by="welcome_messages"/>
		
		<field name="title" type="text" nullable="false"/>
		<field name="message" type="text" nullable="false"/>
		
		<one-to-many field="offers" target-entity="KnightOffer" mapped-by="message"/> 
	</entity>
</doctrine-mapping>
