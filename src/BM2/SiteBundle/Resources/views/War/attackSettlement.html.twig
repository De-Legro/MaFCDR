{% extends "BM2SiteBundle::layout.html.twig" %}

{% block content %}
	<h2>{{ "military.settlement.attack.name"|trans({},"actions")|title }}</h2>
	{% if result %}
		<p>{{ "military.settlement.attack.success"|trans({}, "actions")|raw }}</p>
		{# FIXME: should have different text/no link if the settlement is fortified and I'm not inside #}
		<p>{{ "military.settlement.attack.reminder"|trans({"%url%":path('bm2_site_actions_take'), "%take%":("control.take.name"|trans({},"actions"))}, "actions")|raw }}</p>
	{% else %}
		<p>{{ "military.settlement.attack.intro"|trans({"%settlement%":link(settlement)},"actions")|raw }}</p>
		{{ form(form) }}
	{% endif %}

{% endblock %}
